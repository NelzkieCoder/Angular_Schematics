{
    "$schema": "http://json-schema.org/schema",
    "id": "HelloSchematics",
    "title":"Hello Schema",
    "type":"object",
    "description": "Says hello to world",
    "properties": {
        "name": {
            "type":"string",
            "description": "The name of the person"
        },
        "path": {
            "type":"string",
            "description": "The path",
            "default":""
        },
        "project": {
            "type":"string",
            "description": "Specify the project to run the schematic in",
            "default":"defaultProject"
        }
    },
    "required": ["name"]
}